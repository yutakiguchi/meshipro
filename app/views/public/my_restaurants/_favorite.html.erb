<% if restaurant.favorited_by?(current_user) %>
  <%= link_to public_restaurant_my_restaurants_path(restaurant.id), method: :delete, local: true, class: "like" do %>
    <div class="like-link">
        <button class="like-link__btn-del">お気に入り済み<i class="far fa-thumbs-up 3x"></i></button>
    </div>
  <% end %>
<% else %>
  <%= link_to public_restaurant_my_restaurants_path(restaurant.id), method: :post, local: true, class: "like" do %>
    <div class="like-link">
        <button class="like-link__btn">お気に入りする<i class="far fa-thumbs-up 3x"></i></button>
    </div>
  <% end %>
<% end %>