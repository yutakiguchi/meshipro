<div class="container　pr-5">
  <div class="row">
      <%=link_to "レシピを書く",new_recipe_path%>
    <h5>全<%=@recipes.count%>件</h5>
     <div class="row" style="flex-wrap:wrap;">
       <div class="col mx-3">
       <% @recipes.each do |recipe|%>
        <%=link_to recipe_path(recipe.id)do%>
        <%=attachment_image_tag recipe.recipe_images[0], :image,:fill,300,300%>
        <%=recipe.name%>
        <%end%>
       <%end%>
       </div>
     </div>
    <table class="table table-bordered restaurant-table mt-3">
     <% @restaurants.each do |restaurant|%>
      <tr>
       <td>
        <%=link_to restaurant.name,restaurant_path(restaurant.id)%>
       </td>
      </tr>
     <%end%>
    </table>
  </div>
</div>