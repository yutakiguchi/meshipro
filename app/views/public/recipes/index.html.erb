<div class="container">
  <div class="row">
   <div class="col-10"></div>
    <div class="col-2">
      <%= link_to "レシピを書く",new_recipe_path %>
    </div>
  </div>
   <div class="row">
    <h5>全<span class="font-weit-nomal small"><%= @recipes.count %></span>件</h5>
   </div>
    <div class="row mt-5">
     <div class="col-10">
     <div class="d-flex flex-wrap">
       <% @recipes.each do |recipe| %>
      <div class="row mx-3">
       <%= link_to recipe_path(recipe.id)do %>
       <%= attachment_image_tag recipe.recipe_images[0], :image,:fill,230,230 %>
       <h4 class="text-success"><%= recipe.name %></h4>
        <% end %>
      </div>
       <% end %>
      </div>
     </div>
   </div>
</div>