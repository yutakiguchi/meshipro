<div class="container">
   <div class="row mt-4">
    <h5>全<span class="font-weit-nomal small"><%= @restaurants.count %></span>件</h5>
   </div>
    <div class="row mt-5">
     <div class="col-10">
     <div class="d-flex flex-wrap">
       <% @restaurants.each do |restaurant| %>
      <div class="row mx-3">
       <%= link_to public_restaurant_path(restaurant.id)do %>
