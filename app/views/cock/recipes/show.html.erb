<% provide(:title,"#{@recipe.name}")%>
<div class="container">
 <div class="recipe card pb-5 pr-3">
  <div class="row">
   <h2 class="mb-3 offset-1">
    <%= @recipe.name %>
   </h2>
   <div class="offset-10 col-1">
    <%= link_to edit_recipe_path(@recipe.id) do%>
     <i class="fas fa-edit"></i>
    <% end %>
    |
    <%= link_to recipe_path(@recipe.id) do %>
     <i class="fas fa-trash"></i>
    <% end %>
   </div>
  </div>

  <div class="row">
   <div class="col-5 offset-1">
    <%= attachment_image_tag @recipe.recipe_images[0], :image,:fill,300,300 %>
   </div>
   
   <div class="offset-1 col-5">
    <div class="description mb-4">
     <h5>説明</h5>
     <%=@recipe.explanation%>
    </div>
    <div class="mb-4">
     <h5>材料</h5>
     <table class="table material">
      <% @recipe.materials.each do |material| %>
       <tr>
        <td><%= material.name %></td>
        <td><%= material.quantity %></td>
       </tr>
      <% end %>
     </table>
    </div>
   </div>
  </div>

  <div class="row offset-4 mt-1">
   <i class="fas fa-thumbs-up"><%= @recipe.my_recipes.count %></i>
  </div>
  <div class="row mt-4">
   <div class="mx-2">
    <%= attachment_image_tag @recipe.recipe_images[1], :image,:fill,100,120 %>
   </div>
   <div class="mx-2">
    <%= attachment_image_tag @recipe.recipe_images[2], :image,:fill,100,100 %>
   </div>
   <div class="mx-2">
    <%= attachment_image_tag @recipe.recipe_images[3], :image,:fill,100,100 %>
   </div>
   <div class="mx-2">
    <%= attachment_image_tag @recipe.recipe_images[4], :image,:fill,100,100 %>
   </div>
  </div>
  <div class="row mt-3 offset-1 mb-3">
   <h4>調理行程</h4>
  </div>
  <div class="row pl-5 mt-4 offset-1">
   <%=@recipe.cook_text%>
  </div>
  <div class="row offset-9 mt-5">
   <span class="create">公開日:<%= @recipe.created_at %></span>
   <span class="update">更新日:<%= @recipe.updated_at %></span>
  </div>
 </div>
 <h3 class="mt-3 offset-1">コメント一覧</h3>
 <% @recipe.recipe_comments.each do |comment| %>
  <%= comment.user.nickname %>
  <%= comment.text %>
  <%= comment.rating %>
 <% end %>

</div>


<div class="restaurant card">
    <div class="row">
      <h2 class="mb-3 offset-1 mt-3">
        <%=@restaurant.name%>
      </h2>
    </div>
      <div class="col-6">
        <%=attachment_image_tag @restaurant,:image,:fill,500,500%>
      </div>
      <div class="col-6">
       <h2 class="mx-3">
        
       </h2>
       <h7 class="mx-2 mt-5">
        <%=@restaurant.description%>
       </h7>
       <h5 class="mt-5 mx-2">
        <%= @restaurant.prefecture_name %><%= @restaurant.address_city %><%= @restaurant.address_street %><%= @restaurant.address_building %>
       </h5>
      </div>
  </div>