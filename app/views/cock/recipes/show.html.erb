 <% provide(:title,"#{@recipe.name}")%>
<div class="container">
  <div class="row">
   <% @recipe.recipe_images.each do |image|%>
    <%=attachment_image_tag image, :image,:fill,300,300%>
   <%end%>
<h4 class="recipe-name">料理名</h4>
  <% if current_cock==@recipe.cock%>
   <%=link_to "編集",edit_recipe_path(@recipe),class: 'edit-dish'%>
   <%=link_to "削除",recipe_path(@recipe),method: :delete,class: 'delete-recipe'%>
  <%end%> 
<div><%=@recipe.name%></div>
<div>説明</div>
<div><%=@recipe.explanation%></div>
<div>材料</div>
<div><%=@recipe.material%></div>
<div>調理行程</div>
<div><%=@recipe.cook_text%></div>
 </div>
</div>

