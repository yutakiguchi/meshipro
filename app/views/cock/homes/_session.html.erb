<div class="container">
  <div class="row mt-4 mb-4">
    <div class="mx-auto sign_in_modal sign_modal_content">
      <h2>コックログイン</h2>
      <%= form_with model: @cock, scope: :cock, url: cock_session_path, local: true do |f| %>
        <div class="field row mt-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class: "form-control email" %>
        </div>

        <div class="field row mt-3">
          <%= f.password_field :password, placeholder: "パスワード 6文字以上",autocomplete: "current-password",class: "form-control current_password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions row justify-content-center">
          <%= f.submit "ログイン",class: 'login-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>