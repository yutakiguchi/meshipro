<div class="container-fluid mb-5">
  <div class="row">
   <div class="col-9"></div>
    <div class="col-3">
      <%= link_to "レシピを書く",new_recipe_path, data: {"turbolinks"=>false},class: "btn btn-info" %>
    </div>
  </div>
  <div class="row">
    <h2 class="offset-1 mb-4">Recipes</h2>
  </div>
  <div class="row">
    <h5 class="offset-1">あなたのレシピは<span class="font-weit-nomal small"><%= @recipes.count %></span>件です</h5>
  </div>
  <div class="row mt-5">
    <div class="col-8 offset-1">
      <div class="d-flex flex-wrap">
        <% @recipes.each do |recipe| %>
          <div class="row mx-3 mt-3">
            <%= link_to recipe_path(recipe.id)do %>
              <div class="card img-thumbnail">
                <%= attachment_image_tag recipe.recipe_images[0], :image,:fill,230,230,format: 'jpeg',fallback: "795px-No_image.jpg",size:'230x230' %>
            <% end %>
                <div class="average-review-rating mt-2" data-score=<%= recipe.recipe_comments.average(:rating)&.round(2) %>></div>
                  <%= link_to recipe_path(recipe.id)do %>
                  <h4 class="text-success mt-3"><%= recipe.name %></h4>
                <% end %>
              </div>
          </div>
       <% end %>
      </div>
     </div>


    <div class="col-2">
      <%= link_to "店舗を登録する",new_restaurant_path, class: 'btn btn-secondary'  %><%#turbolinksを切る%>
      <table class="table border restaurant-table mt-3">
        <p>< Restaurants ></p>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td>
              <i class="fas fa-utensils"></i>
              <%= link_to restaurant.name,restaurant_path(restaurant.id),class: 'text-dark pl-3' %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>