<div class="container">
  <div class="row">
   <div class="col-10"></div>
    <div class="col-2">
      <%= link_to "レシピを書く",new_recipe_path %>
    </div>
  </div>
   <div class="row">
    <h5>あなたのレシピは<span class="font-weit-nomal small"><%= @recipes.count %></span>件です</h5>
   </div>
    <div class="row mt-5">
     <div class="col-10">
     <div class="d-flex flex-wrap">
       <% @recipes.each do |recipe| %>
      <div class="row mx-3">
       <%= link_to recipe_path(recipe.id)do %>
       <%= attachment_image_tag recipe.recipe_images[0], :image,:fill,230,230 %>
       <h4 class="text-success"><%= recipe.name %></h4>
        <% end %>
      </div>
       <% end %>
      </div>
     </div>
    <div class="col-2">
    <table class="table table-bottom_bordered restaurant-table mt-3">
     <% @restaurants.each do |restaurant| %>
      <tr>
       <td>
        <%= attachment_image_tag restaurant, :image ,:fill,50,50 %>
       <span><%= link_to restaurant.name,restaurant_path(restaurant.id) %></span>
       </td>
      </tr>
     <% end %>
    </table>
    </div>
   </div>
</div>