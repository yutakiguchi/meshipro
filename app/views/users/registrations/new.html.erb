<div class="container">
  <div class="row mt-4 mb-4">
    <div class="mx-auto">
      <h4>閲覧アカウント作成</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="field row mt-3">
          <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "form-control nickname"%>
        </div>
        <div class="field row mt-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control email" %>
        </div>

        <div class="field row mt-4">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード6文字以上", class: "form-control email" %>
        </div>

        <div class="field row mt-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワード確認", class: "form-control email" %>
        </div>

        <div class="actions row justify-content-center">
          <%= f.submit "新規登録",class: 'sign-btn-user' %>
        </div>
      <% end %>

      <div class="mt-2 mx-auto">
        <span>ログインは</span>
        <span><%= link_to "こちら",new_user_session_path%></span>
      </div>
    </div>
  </div>
</div>
